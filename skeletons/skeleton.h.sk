ASS_state_t ASS_current_state = 0;
bool ASS_valid_sentence = false;
int ASS_current_token;
int ASS_column = 0;

void ASS_syntax_error()
{
    fprintf(stderr, "Syntax error at %i\n", ASS_column);
    ASS_current_state = 0;
}

