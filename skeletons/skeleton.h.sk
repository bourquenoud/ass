int main(int argc, char const *argv[])
{

    while (true)
    {
        // Run on step of the state machine

        ASS_current_token = fgetc(stdin);

        if (ASS_current_token == '\n')
        {
            if (ASS_valid_sentence)
                printf("Valid\n");
            else
                printf("Invalid\n");
            ASS_current_state = 0;
